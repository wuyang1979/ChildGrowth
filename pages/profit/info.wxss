.cash-out-area {
    background: linear-gradient(180deg, #178fd1, #48bcfe);
    padding: 15px 30px;
    width: 75%;
    margin: 0 auto;
    border-radius: 5px;
    margin-top: 15px;
}

.operate-area {
    padding: 15px 0px;
    width: 90%;
    margin: 0 auto;
    border-radius: 5px;
    margin-top: 15px;
    border: 1px solid #f5f5f5;
    box-shadow: 0 0px 4px 1px #f5f5f5;
}

.tip-area {
    padding: 15px 0px;
    width: 90%;
    margin: 0 auto;
    margin-top: 15px;
    border-bottom: 1px solid #d8d8d8;
}

.operate-tip {
    letter-spacing: 2px;
    padding-left: 15px;
}

.operate-bottom {
    display: flex;
    align-items: center;
    margin-top: 10px;
    padding-left: 15px;
}

.operate-input {
    width: 70%;
    padding: 5px 0;
}

.all-btn {
    background-color: #188fd3;
    margin-left: auto;
    color: white;
    font-size: 14px;
    padding: 2px 15px;
    border-radius: 20px;
    margin-right: 10px;
    letter-spacing: 2px;
}

.withdrawal-btn {
    width: 75%;
    margin: 0 auto;
    margin-top: 16px;
    padding: 6px 0;
    text-align: center;
    color: white;
    font-size: 18px;
    letter-spacing: 1px;
    background: linear-gradient(180deg, #178fd1, #48bcfe);
    border-radius: 25px;
}

.cash-out-top-area {
    display: flex;
    align-items: center;
}

.can-cash-out-num {
    color: white;
    font-size: 26px;
    letter-spacing: 2px;
}

.record-tip {
    margin-left: auto;
    color: white;
    margin-right: 10px;
    letter-spacing: 1px;
    font-size: 14px;
}

.cash-out-chevron {
    width: 7px;
    height: 12px;
}

.cash-out-middle-area {
    color: white;
    font-size: 13px;
    margin-top: -5px;
    letter-spacing: 1px;
}

.cash-out-bottom-area {
    display: flex;
    align-items: center;
    margin-top: 20px;
    justify-content: space-between;
}

.cash-out-bottom-left-area {
    position: relative;
}

.has-cash-out-num,
.ing-cash-out-num {
    color: white;
    font-size: 24px;
    letter-spacing: 2px;
}

.has-cash-out-tip,
.ing-cash-out-tip {
    color: white;
    font-size: 13px;
}

.cash-out-bottom-right-area {
    text-align: center;
}

.cash-out-bottom-middle-area {
    position: relative;
}

.cash-out-bottom-middle-area::after {
    content: "";
    width: 4rpx;
    height: 70rpx;
    background: #fff;
    position: absolute;
    top: -15px;
}

.tip-title {
    font-size: 13px;
    color: #9e9e9e;
}

.tip-item {
    margin-top: 8px;
    color: #9e9e9e;
    font-size: 11px;
}

.blue {
    color: #3698d7;
}

.profit-area {
    display: flex;
    padding: 10px 0;
    justify-content: space-evenly;
    width: 90%;
    margin: 0 auto;
}

.profit-tip-area {
    display: flex;
    padding: 10px 0;
    justify-content: space-evenly;
    font-size: 13px;
    text-align: center;
    color: #4c4c4c;
    width: 90%;
    margin: 0 auto;
}

.profit-list-area {
    display: flex;
    padding: 10px 0;
    justify-content: space-evenly;
    font-size: 13px;
    text-align: center;
    color: #4c4c4c;
    width: 90%;
    margin: 0 auto;
}

.profit-list-area:last-child {
    margin-block-end: 10px;
}

.profit-none-list-tip {
    padding: 5px 0;
    font-size: 13px;
    text-align: center;
    color: #4c4c4c;
    width: 90%;
    margin: 0 auto;
    margin-bottom: 10px;
}

.profit-list-inner-area {
    display: flex;
    width: 30%;
    justify-content: center;
}

.customer-tip {
    width: 30%;
}

.total-pay-tip,
.profit-to-self-tip {
    width: 35%;
}

.customer-head-img {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    margin-right: 3px;
}

.customer-nickname {
    width: 70%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
}

.customer-total-pay,
.customer-profit-to-self-total {
    width: 35%;
}

.profit-type-selected {
    color: #0b8ec6;
    font-weight: bold;
    flex-wrap: wrap;
}

.profit-type-selected::after {
    content: '';
    width: 100%;
    height: 0;
    display: block;
    margin: 0 auto;
    border-bottom: 2px solid #0b8ec6;
    margin-top: 0px;
    margin-right: auto;
    margin-bottom: 0px;
    margin-left: auto;
}