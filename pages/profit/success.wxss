.success-image {
    width: 100px;
    height: 100px;
    display: block;
    margin: 0 auto;
    margin-top: 50px;
}

.success-title {
    font-size: 18px;
    letter-spacing: 1px;
    margin-top: 15px;
    text-align: center;
}

.success-tip {
    font-size: 14px;
    letter-spacing: 1px;
    color: #898989;
    margin-top: 15px;
    text-align: center;
}

.see-record-btn {
    width: 90%;
    margin: 0 auto;
    margin-top: 50px;
    background-color: #09ba07;
    text-align: center;
    color: white;
    padding: 10px 0;
    font-size: 17px;
    letter-spacing: 1px;
    border-radius: 5px;
    border: 1px solid #09ba07;
}

.go-back-btn {
    width: 90%;
    margin: 0 auto;
    margin-top: 15px;
    background-color: #fbfbfd;
    text-align: center;
    padding: 7px 0;
    border: 1px solid #d6d6d6;
    font-size: 17px;
    letter-spacing: 1px;
    border-radius: 5px;
}

.bottom-area {
    font-size: 10px;
    color: #aba9a9;
    text-align: center;
    position: fixed;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    width: 220px;
}