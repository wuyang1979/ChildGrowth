.page,
page {
    background-color: #f7f7f7;
}

.top-area {
    display: flex;
    background-color: white;
    padding: 10px 0;
}

.all-tab,
.finished-tab {
    width: 20%;
    text-align: center;
    font-size: 14px;
}

.pedding-pay-tab,
.pedding-receive-tab {
    width: 30%;
    text-align: center;
    font-size: 14px;
    display: flex;
    justify-content: center;
}

.special-count {
    font-size: 12px;
    color: #7cb3e0;
}

.selected {
    color: #0b8ec6;
    font-size: 15px;
    font-weight: bold;
    flex-wrap: wrap;
}

.specialSelected {
    color: #0b8ec6;
    font-size: 15px;
    font-weight: bold;
    flex-wrap: wrap;
}

.selected::after {
    content: '';
    width: 50%;
    height: 0;
    display: block;
    margin: 0 auto;
    border-bottom: 2px solid #0b8ec6;
    margin-top: 0px;
    margin-right: auto;
    margin-bottom: 0px;
    margin-left: auto;
}

.specialSelected::after {
    content: '';
    width: 80%;
    height: 0;
    display: block;
    margin: 0 auto;
    border-bottom: 2px solid #0b8ec6;
    margin-top: 0px;
    margin-right: auto;
    margin-bottom: 0px;
    margin-left: auto;
}

.order-item {
    margin: 0 auto;
    position: relative;
    margin-top: 15px;
    width: 85%;
    background-color: white;
    padding: 10px 15px 10px 15px;
    border-radius: 10px;
    box-shadow: 0 0px 4px 1px #d1d1d1;
    padding-top: 40px;
}

.order-top-area {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.top-image {
    width: 20px;
    height: 20px;
    margin-right: 3px;
}

.product-name {
    font-family: fantasy;
    width: 80%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 14px;
}

.order-status {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 12px;
    border: 1px solid black;
    border-radius: 10px;
    padding: 0 10px;
}

.content-area {
    display: flex;
}

.main-image {
    width: 70px;
    height: 70px;
    border-radius: 5px;
}

.content-right-area {
    width: 75%;
    margin-left: 10px;
    margin-top: -5px;
}

.introduce {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    color: #505050;
}

.order-info-area {
    display: flex;
    align-items: baseline;
}

.order-total-area {
    display: flex;
    align-items: baseline;
    font-size: 14px;
}

.order-time {
    color: #858585;
}

.order-phone{
    margin-left: auto;
}

.order-num {
    font-size: 13px;
    color: #858585;
}

.order-total-num {
    margin-left: auto;
    margin-right: 5px;
}

.order-total {
    color: red;
}

.order-price {
    font-size: 14px;
    margin-left: auto;
}

.pedding-pay-tip-area {
    display: flex;
    align-items: center;
    margin-left: auto;
}

.pedding-pay-tip {
    color: #9a9a9a;
}

.pay-btn {
    border: 2px solid #ff3500;
    border-radius: 20px;
    box-sizing: border-box;
    padding: 2px 10px;
    font-size: 14px;
    color: #ff3500;
    font-weight: bold;
}

.confirm-btn {
    border-radius: 20px;
    background-color: #028fd7;
    color: white;
    padding: 2px 30px;
    font-size: 14px;
    font-family: fantasy;
}

.pedding-pay-line {
    background: #e0e0e0;
    width: 100%;
    height: 1px;
    margin-top: 5px;
    margin-bottom: 15px;
}

.receive-phone {
    margin-left: 20px;
}

.order-item-sale-image {
    width: 30px;
    height: 30px;
    position: absolute;
    top: 5px;
    left: 15px;
    border-radius: 50%;
}

.order-item-nick-name{
    font-size: 14px;
    position: absolute;
    top: 8px;
    left: 55px;
}

.order-item-bottom-area {
    display: flex;
    align-items: center;
    font-size: 13px;
    color: #8f8f8f;
}

.order-bottom-tip {
    margin-left: auto;
    margin-right: 5px;
}

.bottom-tip-image {
    width:15px;
    height: 15px;
}