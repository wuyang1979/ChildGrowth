page,
.page {
    background-color: #f5f5f5;
}

.top-area {
    background: linear-gradient(#ff8c21, #ffc58e);
    padding: 0 5px 10px 5px;
    display: flex;
    align-items: flex-end;
}

.content-area {
    margin-top: 20px;
    padding: 0 5px 0 5px;
}

.content-title {
    font-size: 17px;
    font-weight: bold;
    margin-bottom: 10px;
    padding-left: 7px;
}

.user-info {
    display: flex;
    align-items: center;
    padding-left: 5px;
    width: 33%;
}

.user-image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-sizing: border-box;
    background-color: #ffd626;
    margin-right: 7px;
}

.user-name {
    width: 55%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.product-item {
    display: flex;
    background-color: white;
    margin-top: 7px;
    border-radius: 10px;
    padding: 17px 8px 10px 12px;
    position: relative;
}

.product-item-image {
    width: 110px;
    height: 100px;
    border-radius: 5px;
}


.bottom-area {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 15px;
}

.bottom-tip {
    font-size: 12px;
    color: #b5b5b5;
}

.bottom-logo-image {
    display: block;
    margin: 0 auto;
    width: 70px;
    height: 20px;
    margin-top: 30px;
}

.bottom-logo-tip {
    font-size: 12px;
    color: #b5b5b5;
    text-align: center;
    letter-spacing: 4px;
    padding-bottom: 20px;
}

.order-line {
    background: #e0e0e0;
    width: 35%;
    height: 1px;
}

.product-item-introduce {
    width: 95%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #8f8f8f;
    font-size: 13px;
}

.product-item-buyCount {
    color: #8f8f8f;
    font-size: 13px;
    width: 95%;
    text-align: right;
    margin-top: 3px;
}

.product-item-left {
    margin-right: 10px;
}

.product-item-right {
    width: 65%;
    position: relative;
}

.product-item-name {
    margin-top: -5px;
    width: 95%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.product-item-price {
    display: flex;
    align-items: baseline;
    margin-top: -3px;
}

.product-item-price-tip {
    color: red;
    font-size: 15px;
    font-style: italic;
    margin-right: 5px;
}

.product-item-presentPrice {
    font-size: 22px;
    color: red;
}

.product-item-presentPrice-tip {
    font-size: 15px;
    color: red;
    letter-spacing: 1px;
}

.product-item-originalPrice {
    color: #acacac;
    text-decoration: line-through;
    font-size: 13px;
}

.panic-buy-btn {
    width: 80px;
    font-size: 14px;
    line-height: 28px;
    background: linear-gradient(35deg, #ffb066, #ff7c00);
    color: white;
    font-weight: bold;
    border-radius: 12px;
    position: absolute;
    bottom: 10rpx;
    right: -6rpx;
}

.sign-up-btn {
    width: 100px;
    font-size: 14px;
    line-height: 28px;
    background: linear-gradient(35deg, #ffb066, #ff7c00);
    color: white;
    font-weight: bold;
    border-radius: 12px;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}

.main-title {
    font-size: 18px;
    text-align: center;
    position: relative;
    width: 47%;
    margin-right: 10px;
}

.weui-search-bar__form {
    border: none;
    border-radius: 20px;
}

.weui-icon-search_in-box {
    position: absolute;
    top: 24rpx;
    left: 20rpx;
}

.weui-search-bar__box {
    padding-left: 15px;
}

.weui-search-bar__input {
    height: 35px;
    margin-left: 20px;
    text-align: left;
}

.weui-icon-clear {
    position: absolute;
    top: 8rpx;
    right: 3px;
    z-index: 99;
}

.city-btn-select {
    color: rgb(0, 0, 0);
    font-size: 15px;
    width: 55px;
    line-height: 35px;
    text-align: center;
}

.product-item-middle-area {
    display: flex;
    align-items: end;
    margin-top: 5px;
}

.distribution-tip {
    color: #8f8f8f;
    font-size: 13px;
    margin-top: 3px;
    margin-left: auto;
    margin-right: 10px;
}

.hot-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 40px;
    height: 40px;
}

.margin-left {
    margin-left: 10px;
}

.wuyu-image {
    width: 22px;
    height: 22px;
    margin-right: 6px;
}

.wuyu-image:first-child{
    margin-left: 1px;
}