page,
.page {
    background-color: #f5f5f5;
}

.address-list-area {
    padding: 10px;
}

.address-item {
    background-color: white;
    padding: 15px 10px 10px 10px;
    border-radius: 5px;
    margin-bottom: 10px;
}

.name {
    display: inline-block;
    font-size: 17px;
    font-weight: bold;
    margin-right: 10px;
}

.phone {
    display: inline-block;
    font-size: 17px;
    font-weight: bold;
}

.address {
    font-size: 14px;
    font-family: monospace;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 5px;
    border-bottom: 1px solid rgb(241 241 241);
    padding-bottom: 10px;
}

.edit-area {
    display: flex;
    align-items: flex-end;
    margin-top: 10px;
    width: 25%;
    margin-left: auto;
}

.edit-img {
    width: 25px;
    height: 25px;
    margin-right: 2px;
    margin-left: auto;
}

.edit-tip {
    color: #8a8a8a;
    font-size: 14px;
    margin-right: 10px;
}

.weui-msg__extra-area {
    margin-bottom: 0;
}

.home-bak-btn {
    background-color: #ffa756;
    color: white;
}