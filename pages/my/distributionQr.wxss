page,
.page {
    background-color: #fcfaff;
}

.qr-tip {
    font-size: 20px;
    letter-spacing: 1px;
    margin-top: 60px;
    text-align: center;
}

.qr-code {
    width: 200px;
    height: 200px;
    display: block;
    margin: 0 auto;
    margin-top: 30px;
}

.go-back {
    font-size: 20px;
    text-align: center;
    letter-spacing: 1px;
    background-color: #fbfbfd;
    width: 90%;
    margin: 0 auto;
    margin-top: 50px;
    padding: 8px 0;
    border-radius: 5px;
    border: 1px solid #d6d4d7;
}

.qr-cell{
    width: 200px;
    text-align: center;
    margin: 0 auto;
    margin-top: 20px;
}

.bottom-left-button {
  background-color: white;
  width: 100%;
  display: inline-block;
}