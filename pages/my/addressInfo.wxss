page,
.page {
    background-color: #f5f5f5;
}

.chevron-right {
    width: 30px;
    height: 30px;
    opacity: 0.3;
    margin-left: auto;
}

.address-info-area {
    background-color: white;
    margin-top: 10px;
}

.name-area,
.phone-area,
.location-area,
.address-area {
    display: flex;
    align-items: center;
    padding: 15px 10px 15px 15px;
    border-bottom: 1px solid rgb(241 241 241);
}

.name-input,
.phone-input {
    margin-left: auto;
    margin-right: 30px;
    width: 70%;
}

.location {
    margin-left: 13px;
}

.location-picker {
    width: 100%;
}

.location-picker-inner {
    display: flex;
    align-items: center;
}

.gray {
    color: gray;
}

.address {
    width: 100%;
    height: 100px;
}

.submit-area {
    padding: 10px 0;
}

.submit-btn {
    background: linear-gradient(45deg, #71d8f3, #039ffd);
    width: 90%;
    border-radius: 25px;
    color: white;
}