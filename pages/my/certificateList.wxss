page,
.page {
    background-color: #f8f8f8;
    padding: 15px;
}

.certificate-list-container {
    width: 90%;
}

.top-area {
    display: flex;
    align-items: center;
    justify-content: center;
}

.top-image-right {
    width: 40px;
    height: 15px;
    margin-left: 30px;
}

.top-image-left {
    width: 40px;
    height: 15px;
    margin-right: 30px;
}

.certificate-item{
    display: flex;
    margin-top: 20px;
    background-color: white;
    align-items: center;
    padding: 10px 0 10px 10px;
}

.item-main-image{
    width: 110px;
    height: 85px;
    border-radius: 5px;
}

.item-middle-area{
    font-size: 14px;
    color: #717170;
    margin-left: 15px;
    width: 30%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item-activity-name{
    margin-bottom: 35px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item-right-area{
    margin-top: -10px;
    text-align: center;
    margin-left: auto;
    margin-right: 10px;
}

.item-right-image{
    width: 40px;
    height: 60px;
}

.view-btn{
    font-size: 13px;
    border: 1px solid #ff8a1a;
    margin-top: 10px;
    color: #ff8a1a;
    padding: 0px 21px;
    border-radius: 10px;
}