page,
.page {
    background-color: #f5f5f5;
}

.chevron-right {
    width: 30px;
    height: 30px;
    opacity: 0.3;
}

.head-img-area {
    display: flex;
    background-color: white;
    align-items: center;
    padding: 20px 10px 20px 15px;
    margin-top: 20px;
}

.head-img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-left: auto;
    margin-right: 30px;
}

.main-info-area,
.other-info-area {
    margin-top: 20px;
    background-color: white;
}

.nick-name-area,
.birthday-area,
.gender-area,
.post-address-area,
.phone-area,
.my-baby-area {
    display: flex;
    align-items: center;
    padding: 20px 10px 20px 15px;
    border-bottom: 1px solid rgb(241 241 241);
}

.nick-name,
.gender,
.phone {
    margin-left: auto;
    margin-right: 30px;
    color: #908f8f;
}

.birthday{
    color: #908f8f;
}

.birthday,
.blank {
    margin-left: auto;
}

.birthday-picker {
    width: 100%;
}

.picker-container {
    display: flex;
    align-items: center;
}

.special-chevron {
    margin-left: auto;
}