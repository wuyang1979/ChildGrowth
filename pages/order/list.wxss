.page,
page {
    background-color: #f7f7f7;
}

.top-area {
    display: flex;
    background-color: white;
    padding: 10px 0;

}

.all-tab,
.pedding-pay-tab,
.pedding-receive-tab,
.finished-tab {
    width: 25%;
    text-align: center;
    font-size: 14px;
}

.selected {
    color: #0b8ec6;
    font-size: 15px;
    font-weight: bold;
}

.selected::after {
    content: '';
    width: 50%;
    height: 0;
    display: block;
    margin: 0 auto;
    border-bottom: 2px solid #0b8ec6;
    margin-top: 0px;
    margin-right: auto;
    margin-bottom: 0px;
    margin-left: auto;
}

.order-item {
    margin-top: 10px;
    background-color: white;
    padding: 10px 15px 15px 15px;
    border-radius: 10px;
}

.order-top-area {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.top-image {
    width: 20px;
    height: 20px;
    margin-right: 3px;
}

.product-name {
    font-weight: bold;
    font-family: fantasy;
    width: 75%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.order-status {
    margin-left: auto;
    color: #8f8f8f;
    font-family: fantasy;
}

.content-area {
    display: flex;
}

.main-image {
    width: 120px;
    height: 100px;
    border-radius: 5px;
}

.content-right-area {
    width: 65%;
    margin-left: 10px;
}

.introduce {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    color: #505050;
}

.order-info-area {
    display: flex;
    align-items: baseline;
    margin-top: 21px;
}

.order-time {
    font-size: 13px;
    color: #858585;
}

.order-num {
    font-size: 13px;
    color: #858585;
    margin-left: auto;
}

.order-total {
    font-size: 18px;
    margin-left: auto;
}

.pedding-pay-tip-area {
    display: flex;
    align-items: center;
}

.pedding-pay-tip {
    color: #9a9a9a;
}

.pay-btn {
    border: 2px solid #ff3500;
    border-radius: 20px;
    box-sizing: border-box;
    padding: 2px 10px;
    font-size: 14px;
    color: #ff3500;
    font-weight: bold;
}

.confirm-btn {
    border-radius: 5px;
    background-color: #028fd7;
    color: white;
    padding: 5px 15px;
    font-size: 14px;
    font-family: fantasy;
}

.pedding-pay-line {
    background: #f3f3f3;
    width: 100%;
    height: 1px;
    margin-top: 5px;
    margin-bottom: 15px;
}